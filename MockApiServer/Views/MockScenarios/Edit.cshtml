@model MockApiServer.Models.ViewModels.MockScenarioViewModel

<div class="card-body">
    <form asp-action="Create" method="post" id="editScenarioForm">
        <input type="hidden" asp-for="MockId" value="@ViewBag.MockId" />

        <div class="row">
            <div class="col-12 col-md-4 mb-3">
                <label class="form-label">Scenario Key</label>
                <input asp-for="ScenarioKey" class="form-control" placeholder="e.g. success/invalid-username" />
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label class="form-label">Status Code</label>
                <input asp-for="StatusCode" class="form-control" type="number" placeholder="e.g. 200/301/404" />
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label class="form-label">Status</label>
                <select asp-for="IsActive" class="form-select">
                    <option value="">-- Select Status --</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger small"></span>
            </div>

            <div class="col-12 col-md-6 mb-3">
                <label asp-for="ResponseJson" class="form-label">Response JSON</label>
                <textarea asp-for="ResponseJson" rows="5" class="form-control"></textarea>
            </div>

            <div class="col-12 col-md-6 mb-3">
                <label asp-for="HeadersJson" class="form-label">Headers JSON (optional)</label>
                <textarea asp-for="HeadersJson" rows="5" class="form-control"></textarea>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>
