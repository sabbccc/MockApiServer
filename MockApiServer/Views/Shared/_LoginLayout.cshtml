    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@title</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/assets/images/favicon.ico" />

    <!-- Library / Plugin Css Build -->
