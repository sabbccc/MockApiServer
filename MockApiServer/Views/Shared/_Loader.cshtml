<style>
    #loading {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 9999;
        display: none;
    }

    .loader-backdrop {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(216, 218, 242, 0.2);
        backdrop-filter: blur(3px);
    }

    .loader-body {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-weight: bold;
        text-align: center;
    }

    .dots {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.4rem;
    }

        .dots div {
            width: 0.8rem;
            height: 0.8rem;
            background: #0d6efd;
            border-radius: 50%;
            animation: bounce 0.8s infinite alternate;
        }

            .dots div:nth-child(2) {
                animation-delay: 0.2s;
            }

            .dots div:nth-child(3) {
                animation-delay: 0.4s;
            }

    @@keyframes bounce {
        to

    {
        transform: translateY(-10px);
        opacity: 0.5;
    }

    }
</style>

<div id="loading" style="display:none;">
    <div class="loader-backdrop"></div>
    <div class="loader-body">
        <div class="dots">
            <div></div><div></div><div></div>
        </div>
        <div class="mt-2 text-dark fw-bold">Loading. Please Wait...</div>
    </div>
</div>
