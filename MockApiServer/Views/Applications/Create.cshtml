@model MockApiServer.Models.ViewModels.ApplicationViewModel
<div class="card-body">
    <form asp-action="Create" method="post" id="createApplicationForm">
        <div class="row mb-3">
            <div class="col-12 col-md-4">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="e.g. DESCO" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
            <div class="col-12 col-md-4 mb-3">
                <label class="form-label">Status</label>
                <select asp-for="IsActive" class="form-select">
                    <option value="">-- Select Status --</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger small"></span>
            </div>
        </div>
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>